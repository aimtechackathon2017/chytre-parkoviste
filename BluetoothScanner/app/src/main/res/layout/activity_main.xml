<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aimtechackathon2017.bluetoothscanner.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/activeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:hint="Threshold"
            android:inputType="number"
            android:text="@string/inactive"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/thresholdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:ems="10"
            android:hint="Threshold"
            android:inputType="number"
            android:text="60"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/startScanBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:height="80dp"
            android:onClick="startScan"
            android:text="@string/start_scan"
            android:textSize="20sp" />

        <Button
            android:id="@+id/stopScanBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dp"
            android:onClick="stopScan"
            android:text="@string/stop_scan"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
